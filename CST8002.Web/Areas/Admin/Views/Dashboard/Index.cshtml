@model CST8002.Web.Areas.Admin.ViewModels.AdminDashboardIndexVm
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Hello, @Model.UserName!</h3>
    <div class="text-muted">Today is @Model.Today.ToString("yyyy-MM-dd")</div>
</div>

<div class="row g-3 mb-4">
    <div class="col-12 col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="Users" asp-action="PendingPatients">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Pending Patients</div>
                        <div class="display-6 fw-semibold">@Model.PendingPatients</div>
                    </div>
                    <span class="btn btn-sm btn-outline-primary">View</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="Users" asp-action="Register">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Doctors</div>
                        <div class="display-6 fw-semibold">@Model.Doctors</div>
                    </div>
                    <span class="btn btn-sm btn-outline-primary">Add</span>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-4">
        <a class="text-decoration-none" asp-area="Admin" asp-controller="Appointments" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted">Today’s Appointments</div>
                        <div class="display-6 fw-semibold">@Model.TodayAppointments</div>
                    </div>
                    <span class="btn btn-sm btn-outline-primary">Manage</span>
                </div>
            </div>
        </a>
    </div>
</div>

