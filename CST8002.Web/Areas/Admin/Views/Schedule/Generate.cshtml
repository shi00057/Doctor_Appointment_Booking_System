@model CST8002.Web.Areas.Admin.ViewModels.Schedule.GenerateSlotsVm
@using CST8002.Web.Areas.Admin.ViewModels.Schedule
@{
    ViewData["Title"] = "Generate Slots";
    var rangeVm = (GenerateSlotsRangeVm)ViewBag.RangeVm;
}

<div class="container mt-3">
    @if (TempData["ok"] is string ok)
    {
        <div class="alert alert-success">@ok</div>
    }
    <div class="row">
        <div class="col-md-6">
            <h5>Single Day</h5>
            <form asp-area="Admin" asp-controller="Schedule" asp-action="Generate" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-2">
                    <label class="form-label">Doctor</label>
                    <select asp-for="DoctorId" asp-items="Model.DoctorItems" class="form-select"></select>
                    <span asp-validation-for="DoctorId" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label class="form-label">Work Date</label>
                    <input asp-for="WorkDate" type="date" class="form-control" />
                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label class="form-label">Start Hour</label>
                    <input asp-for="StartHour" type="number" min="0" max="24" class="form-control" />
                    <span asp-validation-for="StartHour" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">End Hour</label>
                    <input asp-for="EndHour" type="number" min="0" max="24" class="form-control" />
                    <span asp-validation-for="EndHour" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Generate</button>
            </form>
        </div>

        <div class="col-md-6">
            <h5>Date Range</h5>
            <form asp-area="Admin" asp-controller="Schedule" asp-action="GenerateRange" method="post">
                @Html.AntiForgeryToken()
                <div class="mb-2">
                    <label class="form-label">Doctor</label>
                    <select name="DoctorId" class="form-select"
                            asp-items="rangeVm.DoctorItems" asp-for="@rangeVm.DoctorId"></select>
                    <span asp-validation-for="@rangeVm.DoctorId" class="text-danger"></span>
                </div>
                <div class="mb-2">
                    <label class="form-label">From</label>
                    <input name="FromDate" value="@rangeVm.FromDate.ToString("yyyy-MM-dd")" type="date" class="form-control" />
                </div>
                <div class="mb-2">
                    <label class="form-label">To</label>
                    <input name="ToDate" value="@rangeVm.ToDate.ToString("yyyy-MM-dd")" type="date" class="form-control" />
                </div>
                <div class="mb-2">
                    <label class="form-label">Start Hour</label>
                    <input name="StartHour" value="@rangeVm.StartHour" type="number" min="0" max="24" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">End Hour</label>
                    <input name="EndHour" value="@rangeVm.EndHour" type="number" min="0" max="24" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Generate Range</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
