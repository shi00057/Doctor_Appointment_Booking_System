@model CST8002.Web.Areas.Admin.ViewModels.Appointments.AdminAppointmentsIndexVm
@{
    ViewData["Title"] = "Manage Appointments";
    long GetApptId(object row)
    {
        var t = row.GetType();
        var p = t.GetProperty("ApptId") ?? t.GetProperty("AppointmentId") ?? t.GetProperty("Id");
        var v = p?.GetValue(row);
        return v is long l ? l : (v is int i ? i : 0);
    }
    var columns = Model.Items.Count > 0
        ? Model.Items[0].GetType().GetProperties()
        : Array.Empty<System.Reflection.PropertyInfo>();
}

<form asp-area="Admin" asp-controller="Appointments" asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-auto">
            <label class="form-label">DoctorId</label>
            <input name="doctorId" class="form-control" value="@(Model.DoctorId?.ToString() ?? "")" />
        </div>
        <div class="col-auto">
            <label class="form-label">PatientId</label>
            <input name="patientId" class="form-control" value="@(Model.PatientId?.ToString() ?? "")" />
        </div>
        <div class="col-auto">
            <label class="form-label">From</label>
            <input name="from" type="date" class="form-control" value="@(Model.From?.ToString("yyyy-MM-dd") ?? "")" />
        </div>
        <div class="col-auto">
            <label class="form-label">To</label>
            <input name="to" type="date" class="form-control" value="@(Model.To?.ToString("yyyy-MM-dd") ?? "")" />
        </div>
        <div class="col-auto align-self-end">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">No data.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead>
                <tr>
                    @foreach (var c in columns)
                    {
                        <th>@c.Name</th>
                    }
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in Model.Items)
                {
                    var id = GetApptId(row);
                    <tr>
                        @foreach (var c in columns)
                        {
                            var val = c.GetValue(row);
                            <td>@(val is DateTime dt ? dt.ToString("yyyy-MM-dd HH:mm") : val)</td>
                        }
                        <td>
                            @if (id > 0)
                            {
                                <form asp-area="Admin" asp-controller="Appointments" asp-action="Cancel" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="apptId" value="@id" />
                                    <input type="text" name="reason" class="form-control form-control-sm d-inline w-auto" placeholder="reason" />
                                    <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
