@model CST8002.Web.Areas.Doctor.ViewModels.DoctorDashboardIndexVm
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "Doctor Dashboard";
    ViewData["UnreadCount"] = Model.UnreadCount; 
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">Hello, @Model.DisplayName!</h3>
    <div class="text-muted">Today is @Model.Today.ToString("yyyy-MM-dd")</div>
</div>

<div class="row g-3">
    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Doctor" asp-controller="Schedule" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">Generate My Schedule</h5>
                    <div class="small text-muted">Create or update available time slots.</div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Doctor" asp-controller="Appointments" asp-action="Index">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">My Appointments</h5>
                    <div class="small text-muted">View or cancel upcoming appointments.</div>
                </div>
            </div>
        </a>
    </div>

    <div class="col-md-4">
        <a class="text-decoration-none" asp-area="Doctor" asp-controller="Profile" asp-action="Edit">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-1">My Profile</h5>
                    <div class="small text-muted">Specialty, contact info, etc.</div>
                </div>
            </div>
        </a>
    </div>
</div>
