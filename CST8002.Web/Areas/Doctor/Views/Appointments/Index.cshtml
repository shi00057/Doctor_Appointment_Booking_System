@model CST8002.Web.Areas.Doctor.ViewModels.DoctorAppointmentsIndexVm
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    ViewData["Title"] = "My Appointments";
}

@functions {
    string FmtLocal(DateTime dt)
        => DateTime.SpecifyKind(dt, DateTimeKind.Utc).ToLocalTime().ToString("yyyy-MM-dd HH:mm");
}

<div class="py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="mb-0">My Appointments</h3>
        <div class="text-muted">
            @if (Model.From.HasValue || Model.To.HasValue)
            {
                <span>
                    Filter:
                    @(Model.From.HasValue? Model.From.Value.ToString("yyyy-MM-dd") : "—")
                    –
                    @(Model.To.HasValue? Model.To.Value.ToString("yyyy-MM-dd") : "—")
                </span>
            }
        </div>
    </div>

    <form method="get" class="row g-3 mb-3">
        <div class="col-md-3">
            <label class="form-label">From</label>
            <input asp-for="From" class="form-control" type="date" />
        </div>
        <div class="col-md-3">
            <label class="form-label">To</label>
            <input asp-for="To" class="form-control" type="date" />
        </div>
        <div class="col-md-2 align-self-end">
            <button class="btn btn-secondary w-100" type="submit">Filter</button>
        </div>
    </form>

    @if (Model?.Items == null || !Model.Items.Any())
    {
        <div class="alert alert-light border d-flex align-items-center" role="alert">
            <div>No appointments found.</div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>ApptId</th>
                        <th>PatientId</th>
                        <th>Start (Local)</th>
                        <th>End (Local)</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var a in Model.Items)
                    {
                        <tr>
                            <td>@a.ApptId</td>
                            <td>@a.PatientId</td>
                            <td>@FmtLocal(a.StartUtc)</td>
                            <td>@FmtLocal(a.EndUtc)</td>
                            <td><span class="badge bg-secondary">@a.Status</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
