@model CST8002.Web.Models.GenerateSlotsVm
@{
    ViewData["Title"] = "Generate Slots";
}
<h2>Generate Slots</h2>
<form asp-action="Schedule" method="post">
    <input type="hidden" asp-for="DoctorId" />
    <div>
        <label>Date</label>
        <input asp-for="WorkDate" type="date" />
        <span asp-validation-for="WorkDate"></span>
    </div>
    <div>
        <label>Start Hour</label>
        <select asp-for="StartHour">
            @for (var h = 0; h <= 23; h++)
            {
                <option value="@h">@h:00</option>
            }
        </select>
        <span asp-validation-for="StartHour"></span>
    </div>
    <div>
        <label>End Hour</label>
        <select asp-for="EndHour">
            @for (var h = 1; h <= 24; h++)
            {
                <option value="@h">@h:00</option>
            }
        </select>
        <span asp-validation-for="EndHour"></span>
    </div>
    <button type="submit">Generate</button>
</form>
@if (!string.IsNullOrWhiteSpace(Model.Message))
{
    <div>@Model.Message</div>
}
<div>
    <a asp-action="MyAppointments" asp-route-doctorId="@Model.DoctorId">Back to My Appointments</a>
</div>
