        <label>DoctorId</label>
        <input asp-for="Filter.DoctorId" />
    </div>
    <div>
        <label>FromUtc</label>
        <input asp-for="Filter.FromUtc" type="datetime-local" />
    </div>
    <div>
        <label>ToUtc</label>
        <input asp-for="Filter.ToUtc" type="datetime-local" />
    </div>
