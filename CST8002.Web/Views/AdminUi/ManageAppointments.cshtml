@model CST8002.Web.Models.Admin.ManageAppointmentsVm
@{
    ViewData["Title"] = "Manage Appointments";
}
<h2>Manage Appointments</h2>
@if (TempData["ok"] != null)
{
    <div>@TempData["ok"]</div>
}

<form asp-action="ManageAppointments" method="post">
    <div>
        <label>DoctorId</label>
        <input asp-for="DoctorId" />
    </div>
    <div>
        <label>PatientId</label>
        <input asp-for="PatientId" />
    </div>
    <div>
        <label>FromUtc</label>
        <input asp-for="FromUtc" type="datetime-local" />
    </div>
    <div>
        <label>ToUtc</label>
        <input asp-for="ToUtc" type="datetime-local" />
    </div>
    <button type="submit">Search</button>
</form>

<table>
    <thead>
        <tr>
            <th>ApptId</th>
            <th>DoctorId</th>
            <th>PatientId</th>
            <th>StartUtc</th>
            <th>EndUtc</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.Items ?? Enumerable.Empty<CST8002.Application.DTOs.AppointmentDto>())
        {
            <tr>
                <td>@x.ApptId</td>
                <td>@x.DoctorId</td>
                <td>@x.PatientId</td>
                <td>@x.StartUtc</td>
                <td>@x.EndUtc</td>
                <td>@x.Status</td>
                <td>
                    <form asp-action="AdminCancel" method="post" style="display:inline">
                        <input type="hidden" name="apptId" value="@x.ApptId" />
                        <input type="text" name="reason" placeholder="reason" />
                        <button type="submit">Cancel</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<p><a href="/Admin">Back to Dashboard</a></p>
