@model CST8002.Web.ViewModels.ErrorVm
@{
    ViewData["Title"] = "Error";
}
<div class="container py-5 text-center">
    <h2 class="mb-3">Oops, something went wrong</h2>
    <p class="text-muted">Please try again later.</p>

    @if (Model?.ShowRequestId == true)
    {
        <p class="text-muted small">Request ID: <code>@Model.RequestId</code></p>
    }

    <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">Back to Home</a>
</div>
